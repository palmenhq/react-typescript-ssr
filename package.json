{
  "name": "react-typscript-starter",
  "version": "1.0.0",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Server,Client\" -c \"cyan.bold,magenta.bold\" \"npm run server:dev-server\" \"npm run client:dev-server\"",
    "build": "rimraf build/* && concurrently -p \"[{name}]\" -n \"TypeScript,Webpack\" -c \"cyan.bold,magenta.bold\" \"npm run server:build\" \"npm run client:build\"",
    "test": "concurrently -p \"[{name}]\" -n \"Server,Client\" -c \"cyan.bold,magenta.bold\" \"npm run server:test\" \"npm run client:test\"",
    "client:dev-server": "NODE_ENV=development webpack-dev-server --config webpack/webpack.config.development.js",
    "client:build": "NODE_ENV=production webpack -p --progress --config webpack/webpack.config.production.js",
    "client:test": "TEST_ENV=client NODE_ENV=test jest --config client/jest.config.json client",
    "server:build": "npm run server:copy-resources & tsc -p server",
    "server:dev-server": "NODE_ENV=development nodemon -x \"ts-node --project server\" -w server server/index.ts",
    "server:test": "NODE_ENV=test jest --config server/jest.config.json server",
    "server:copy-resources": "mkdir -p build/resources && cp -r server/resources/* build/resources"
  },
  "dependencies": {
    "@types/debug": "^0.0.30",
    "@types/handlebars": "^4.0.36",
    "@types/koa": "^2.0.43",
    "@types/koa-mount": "^3.0.0",
    "@types/koa-router": "^7.0.27",
    "@types/koa-static": "^4.0.0",
    "@types/node": "^8.5.7",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.6",
    "@types/react-redux": "^5.0.14",
    "@types/react-router-dom": "^4.2.3",
    "@types/redux": "^3.6.0",
    "@types/seamless-immutable": "^7.1.1",
    "@types/webpack-env": "^1.13.3",
    "awesome-typescript-loader": "^3.4.1",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "concurrently": "^3.5.1",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.8",
    "debug": "^3.1.0",
    "es6-promise": "^4.2.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "handlebars": "^4.0.11",
    "koa": "^2.4.1",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "nebula-css": "^2.7.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.12",
    "postcss-loader": "^2.0.10",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-observable": "^0.17.0",
    "rimraf": "^2.6.2",
    "rxjs": "^5.5.6",
    "sass-loader": "^6.0.6",
    "seamless-immutable": "^7.1.3",
    "source-map-loader": "^0.2.3",
    "source-map-support": "^0.5.3",
    "style-loader": "^0.19.1",
    "svg-inline-loader": "^0.8.0",
    "typescript": "^2.7.1",
    "universal-webpack": "^0.6.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.10.0",
    "webpack-stats-plugin": "^0.1.5"
  },
  "devDependencies": {
